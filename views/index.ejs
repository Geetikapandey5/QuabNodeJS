<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hodlinfo</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Hodlinfo</h1>
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Platform</th>
                    <th>Last Traded Price</th>
                    <th>Buy Price</th>
                    <th>Sell Price</th>
                    <th>Volume</th>
                    <th>Base Unit</th>
                </tr>
            </thead>
            <tbody>
                <% tickers.forEach((ticker, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= ticker.name %></td>
                    <td>₹ <%= ticker.last %></td>
                    <td>₹ <%= ticker.buy %></td>
                    <td>₹ <%= ticker.sell %></td>
                    <td><%= ticker.volume %></td>
                    <td><%= ticker.base_unit %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
